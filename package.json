{
  "name": "writewise-device-auth",
  "version": "1.13.0",
  "description": "A tool to fetch the device's UUID",
  "main": "main.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "echo \"No linting configured\""
  },
  "author": {
    "name": "Writewise",
    "email": "contact@writewise.com"
  },
  "license": "ISC",
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.63",
    "@electron-forge/maker-deb": "^6.0.0-beta.63",
    "@electron-forge/maker-rpm": "^6.0.0-beta.63",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.63",
    "@electron-forge/maker-zip": "^6.0.0-beta.63",
    "@electron-forge/publisher-github": "^6.0.0-beta.63",
    "electron": "^18.0.3"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "node-machine-id": "^1.1.12"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "protocols": [
          {
            "name": "Writewise Device Auth",
            "schemes": [
              "writewise-device-auth"
            ]
          }
        ]
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "writewise-device-auth",
            "authors": "Writewise",
            "iconUrl": "file:///C:/Users/......./favicon.ico",
            "exe": "writewise-device-auth.exe"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {
            "options": {
              "bin": "writewise-device-auth",
              "maintainer": "Writewise",
              "icon": "./favicon.png"
            },
            "mimeType": [
              "x-scheme-handler/writewise-device-auth"
            ]
          }
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {
            "options": {
              "bin": "writewise-device-auth",
              "icon": "./favicon.png"
            }
          }
        }
      ],
      "publishers": [
        {
          "name": "@electron-forge/publisher-github",
          "config": {
            "repository": {
              "owner": "Writewise",
              "name": "writewise-device-auth"
            },
            "draft": true
          }
        }
      ]
    }
  }
}
